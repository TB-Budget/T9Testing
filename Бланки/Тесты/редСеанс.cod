    Window.Caption = 'Сеанс тестирования';
-- type типСтадияТестрования = (СтадияСозданиеПрограммы = 0, СтадияВыполнениеПрограммы, СтадияСеансЗавершен, СтадияСеансВозобновлен);
    if (Стадия = СтадияСозданиеПрограммы): Result = 'Сеанс' + Chr(13) + '<s-><s-><cf:GrayText>(создание программы тестирования)';
    elsif (Стадия = СтадияВыполнениеПрограммы): Result = 'Сеанс' + Chr(13) + '<s-><s->(выполнение программы тестирования)';
